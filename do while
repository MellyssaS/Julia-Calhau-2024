#include<stdio.h> 
int main() {
    float nota1, nota2, nota3, soma, media;
    int resposta;
    
    do{
    printf("digite a 1 nota: ");
    scanf("%f", &nota1);
    
    printf("digite a 2 nota: ");
    scanf("%f", &nota2);
    
    printf("digite a 3 nota: ");
    scanf("%f", &nota3);
    
    soma = nota1+nota2+nota3;
    media = (nota1 + nota2 + nota3)/3;
    
    printf("A soma das notas eh: %.2f", soma);
    printf("\nA media do aluno eh: %.2f", media);
    
    printf("\nDigite 1 para continuar ou digite 2 para sair \n");
    scanf("%d", &resposta);
    
    }while(resposta==1);
    
    return 0;
}
