#include<stdio.h>
#include<locale.h>
int main(){
    int velocidade;
    int distancia;

    printf ("Digite a velocidade: ");                                                                                                                                                                                                scanf ("%d", &velocidade);
    scanf("%d" , &velocidade);
    
    printf("Digite a distância: ");                                                                                                                                                                                           scanf ("%d.2f", &distancia);
    scanf("%d.2f" , &distancia);
    
    printf("A sua velocidade é: %d", velocidade/distancia);

    return 0;
}
